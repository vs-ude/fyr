    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug compiled: static",
            "program": "${workspaceFolder}/bin/fyrc",
            "preLaunchTask": "npm: build",
            "outFiles": [
                "${workspaceFolder}/lib/**/*.js"
            ],
            "cwd":"${workspaceFolder}",
            "args": [
                "-n",
                "${workspaceFolder}/src/collections/tree"
            ],
            "env": {
                "FYRBASE": "${workspaceFolder}"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug compiled: current",
            "program": "${workspaceFolder}/bin/fyrc",
            "preLaunchTask": "npm: build",
            "outFiles": [
                "${workspaceFolder}/lib/**/*.js"
            ],
            "cwd":"${workspaceFolder}",
            "args": [
                "-n",
                "${fileDirname}"
            ],
            "env": {
                "FYRBASE": "${workspaceFolder}"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug ts: static",
            "program": "${workspaceFolder}/bin/ts-fyrc",
            "cwd":"${workspaceFolder}/",
            "args": [
                "-n",
                "${workspaceFolder}/src/collections/tree"
            ],
            "env": {
                "FYRBASE": "${workspaceFolder}",
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug ts: current",
            "program": "${workspaceFolder}/bin/ts-fyrc",
            "cwd":"${workspaceFolder}/",
            "args": [
                "-n",
                "${fileDirname}"
            ],
            "env": {
                "FYRBASE": "${workspaceFolder}",
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run/debug tests",
            "preLaunchTask": "build:test-watch",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "cwd":"${workspaceFolder}/",
            "args": [
                "tests/**/*.spec.js"
            ],
            "runtimeArgs": [
                "--nolazy"
            ],
            "sourceMaps": true,
            "outFiles": ["${workspaceFolder}/tests/**/*.js"],
            "env": {
                "FYRBASE": "${workspaceFolder}",
                "NODE_ENV": "production"
            }
        }
    ]
}
