{
  "name": "fyr",
  "version": "0.0.2",
  "description": "Fyr: an experimental compiler for WebAssembly and IoT applications",
  "main": "lib/index",
  "typings": "lib/index",
  "scripts": {
    "pretest": "pegjs -o test/tests/parser.js compiler/parser.pegjs && tsc -p test/tsconfig.test.json",
    "test": "mocha --reporter list || exit 0",
    "pretest:watch": "pegjs -o test/tests/parser.js compiler/parser.pegjs",
    "test:watch": "mocha-typescript-watch -p test/tsconfig.test.json",
    "pretest:coverage": "npm run pretest",
    "test:coverage": "nyc mocha --reporter progress || exit 0",
    "build:parser": "pegjs -o lib/parser.js compiler/parser.pegjs",
    "build:js": "tsc",
    "build:lib": "mkdir -p pkg/`bin/fyrarch` && gcc -o pkg/`bin/fyrarch`/fyr.o -O3 -g3 -c src/runtime/fyr.c",
    "build": "npm run build:parser && npm run build:js && npm run build:lib",
    "clean": "rm -rf lib/* test/tests/*"
  },
  "keywords": [
    "fyr",
    "wasm",
    "webassembly",
    "compiler"
  ],
  "author": "Torben Weis",
  "license": "Apache-2.0",
  "dependencies": {
    "colors": "^1.3.0",
    "commander": "^2.9.0",
    "text-encoding": "^0.6.4"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/colors": "^1.2.1",
    "@types/mocha": "^5.2.5",
    "@types/node": "^8.0.0",
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "mocha-typescript": "^1.1.17",
    "nyc": "^13.1.0",
    "pegjs": "^0.10.0",
    "typescript": "^3.2.2"
  },
  "nyc": {
    "check-coverage": true,
    "include": [
      "test/tests/**/*.js"
    ],
    "exclude": [
      "bin",
      "node_modules",
      "lib",
      "test/tests/**/*.spec.js"
    ],
    "reporter": [
      "text",
      "text-summary",
      "lcov"
    ],
    "all": true
  }
}
