{
  "name": "fyrlang",
  "version": "0.1.4",
  "description": "Fyr: an experimental compiler for IoT applications",
  "homepage": "http://fyr.vs.uni-due.de",
  "main": "lib/index",
  "typings": "lib/index",
  "scripts": {
    "preinstall": "[ -d .git ] && git config core.hooksPath ./dev/hooks || true",
    "postinstall": "npm run build:lib",
    "pretest": "mkdir -p test/tests/parser && pegjs -o test/tests/parser/parser.js compiler/parser/parser.pegjs && tsc -p test/tsconfig.test.json",
    "test": "mocha --reporter list || exit 0",
    "pretest:watch": "mkdir -p test/tests/parser && pegjs -o test/tests/parser/parser.js compiler/parser/parser.pegjs",
    "test:watch": "mocha-typescript-watch -p test/tsconfig.test.json",
    "pretest:coverage": "npm run pretest",
    "test:coverage": "nyc mocha --reporter progress || exit 0",
    "build:parser": "mkdir -p lib/parser && pegjs -o lib/parser/parser.js compiler/parser/parser.pegjs",
    "build:js": "tsc",
    "build:lib": "mkdir -p pkg/`bin/fyrarch` && gcc -o pkg/`bin/fyrarch`/fyr.o -O3 -g3 -c src/runtime/fyr.c && gcc -o pkg/`bin/fyrarch`/fyr_spawn.o -O3 -g3 -c src/runtime/fyr_spawn.c -U_FORTIFY_SOURCE",
    "build": "npm run build:parser && npm run build:js && npm run build:lib",
    "build:doc": "typedoc --readme ./API.md --exclude '**/*.spec.ts' --out docs compiler",
    "clean": "rm -rf lib/* test/tests/* coverage/ docs/ .nyc_output/ bin/`bin/fyrarch`/ build/ packpack/ pkg/*"
  },
  "keywords": [
    "fyr",
    "compiler",
    "distributed",
    "iot"
  ],
  "author": "VS.UDE (https://vs.uni-due.de)",
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/vs-ude/fyr.git"
  },
  "dependencies": {
    "colors": "^1.3.3",
    "commander": "^2.20.0",
    "text-encoding": "^0.6.4"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/colors": "^1.2.1",
    "@types/mocha": "^5.2.7",
    "@types/node": "^8.10.50",
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "mocha-typescript": "^1.1.17",
    "nyc": "^14.1.1",
    "pegjs": "^0.10.0",
    "ts-mockito": "^2.3.1",
    "typedoc": "^0.14.2",
    "typescript": "^3.5.3"
  },
  "nyc": {
    "check-coverage": true,
    "exclude-after-remap": false,
    "include": [
      "test/tests/**/*.js"
    ],
    "exclude": [
      "bin",
      "node_modules",
      "lib",
      "test/tests/**/*.spec.js",
      "test/tests/parser/parser.js"
    ],
    "reporter": [
      "text",
      "text-summary",
      "lcov"
    ],
    "all": true
  }
}
