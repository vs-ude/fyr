{
  "name": "fyr",
  "version": "0.0.2",
  "description": "Fyr: an experimental compiler for WebAssembly and IoT applications",
  "main": "lib/index",
  "typings": "lib/index",
  "scripts": {
    "test:once": "mocha 'tests/**/*.spec.js'",
    "test:watch": "mocha 'tests/**/*.spec.js' --watch --reporter min",
    "test:coverage": "nyc --reporter=text mocha 'tests/**/*.spec.js'",
    "build:parser": "pegjs -o lib/parser.js compiler/parser.pegjs",
    "build:js": "tsc",
    "build:lib": "mkdir -p pkg/`bin/fyrarch` && gcc -o pkg/`bin/fyrarch`/fyr.o -O3 -g3 -c src/runtime/fyr.c",
    "build": "npm run build:parser && npm run build:js && npm run build:lib",
    "build:parser-test": "pegjs -o tests/parser.js compiler/parser.pegjs",
    "build:test": "npm run build:parser-test && tsc -p tsconfig.tests.json",
    "build:test-watch": "npm run build:parser-test && tsc -w --pretty false --preserveWatchOutput true -p tsconfig.tests.json",
    "clean": "rm -rf lib/* tests/*"
  },
  "keywords": [
    "fyr",
    "wasm",
    "webassembly",
    "compiler"
  ],
  "author": "Torben Weis",
  "license": "Apache-2.0",
  "dependencies": {
    "colors": "^1.3.0",
    "commander": "^2.9.0",
    "text-encoding": "^0.6.4"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/colors": "^1.2.1",
    "@types/mocha": "^5.2.5",
    "@types/node": "^8.0.0",
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "pegjs": "^0.10.0",
    "typescript": "^3.2.2"
  }
}
