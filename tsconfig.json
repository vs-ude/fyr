{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "incremental": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": false,
    "noUnusedLocals": false,
    "outDir": "lib",
    "declaration": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "compiler/**/*.ts"
  ],
  "exclude": [
    "compiler/**/*.spec.ts",
    "node_modules"
  ]
}
